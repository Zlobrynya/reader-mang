<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    android:installLocation="preferExternal"
    package="com.example.nikita.progectmangaread">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.VIBRATE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_SETTINGS"/>
    <uses-permission android:name="android.permission.WAKE_LOCK"/>


    <application
        android:allowBackup="true"
        android:icon="@drawable/launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:largeHeap="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Activity.TopManga"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activity.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".Activity.DescriptionMang"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity android:name=".Activity.PagesDownload"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".Activity.BaseActivity"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".Activity.RecentlyRead"
            android:theme="@style/AppTheme.NoActionBar"
            android:launchMode="singleTask" />

        <activity
            android:name=".Activity.Bookmark"
            android:theme="@style/AppTheme.NoActionBar"
            android:launchMode="singleTask">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Activity.TopManga"/>
        </activity>

        <activity android:name=".Activity.DownloadChapter" />

        <activity
            android:name=".Activity.ShowDownloaded"
            android:parentActivityName=".Activity.TopManga"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Activity.TopManga"/>
        </activity>

        <activity android:name=".Activity.DeleteChapter" />

        <activity
            android:name=".Activity.MainSettings"
            android:theme="@style/AppTheme.NoActionBar" />

        <service
            android:name=".service.ServiceDownChapter"
            android:enabled="true"
            android:exported="false" />


        <service
            android:name=".service.UpdateMangBookmark"
            android:enabled="true"
            android:exported="false"/>

        <service
            android:name=".service.MoveFile"
            android:enabled="true"
            android:exported="false"/>

        <receiver android:name=".service.AlarmManagerBroadcastReceiver"/>
    </application>

</manifest>
